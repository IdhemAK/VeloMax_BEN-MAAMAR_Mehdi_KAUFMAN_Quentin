<Page x:Class="VeloMax_BEN_MAAMAR_Mehdi_KAUFMAN_Quentin.Stock"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VeloMax_BEN_MAAMAR_Mehdi_KAUFMAN_Quentin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Stock">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="0" Grid.Row="0" Content="Pièce" Background="LightBlue" Click="stock_Piece" Margin="30,30,0,15" Width="150" Height="35" BorderBrush="#FF4E95AA" BorderThickness="3"/>
        <Button Grid.Column="0" Grid.Row="1" Content="Vélo" Background="LightBlue" Click="stock_Velo" Margin="30,15,0,15" Width="150" Height="35" BorderThickness="3" BorderBrush="#FF4E95AA"/>

        <DataGrid x:FieldModifier="public" x:Name="pieceDataGrid" Grid.Row="0" Grid.Column="1" Width="500" Margin="40,30" />







    </Grid>
</Page>
