            Width="150" 
            Height="35" 
            BorderThickness="3" 
            BorderBrush="#FF4E95AA"
            />
        <Button 
            HorizontalAlignment="Right" 
            VerticalAlignment="Top" 
            Margin="30,300,0,0" 
            Content="Recommander ? (.xml)" 
            Background="LightBlue" 
            Click="commander"  
            Width="150" 
            Height="35" 
            BorderThickness="3" 
            BorderBrush="#FF4E95AA"
            />

        <Label 
            Content="Manque de stock :" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"
            Height="40"
            Width="150"
            Margin="30,100,0,0" />

        <DataGrid
            x:Name="mainDataGrid" 
            Grid.Column="1" 
            Width="560" 
            Height="330"
            Margin="30,30" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            IsReadOnly="True"
            AlternatingRowBackground="#9CDFFF"
            CanUserResizeRows="False"
            >
            <!--
            <DataGrid.Columns>
                <DataGridTextColumn Header="prout"/>
            </DataGrid.Columns>
            -->
        </DataGrid>
        <DataGrid
            x:Name="manqueStock" 
            Width="150" 
            Height="160"
            Margin="30,130,0,0" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            IsReadOnly="True" Grid.ColumnSpan="2"
            AlternatingRowBackground="#9CDFFF"
            CanUserResizeRows="False"
            >
            <!--
            <DataGrid.Columns>
                <DataGridTextColumn Header="prout"/>
            </DataGrid.Columns>
            -->
